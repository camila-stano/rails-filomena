<%= render "shared/navbar" %>
<%= render 'shared/banner-user' %>

<div class="row d-flex mb-3">
  <div class="profile-info d-inline-flex justify-content-between align-items-center col-12">
    <div>
      <h1 class= 'profile-title ml-4'>Arm√°rio do <%= @profile.first_name %> <%= @profile.last_name %></h1>
    </div>
    <div>
      <% if current_user %>
        <%= link_to 'Adicionar um novo produto', new_product_path, class: 'btn btn-primary add-product mr-4' %>
      <% end%>
    </div>
  </div>
</div>

<div class="info-available"></div>
<div class="info-not-available"></div>

<div class="row d-flex">
  <% @profile.products.each do |product|  %>
    <%product.photos.each do |photo|%>
    
      <div class="img-profile col-4">
        <%= cl_image_tag(photo.key, transformation:[{crop: 'crop', width: 600, height: 600}, {crop: 'fill', width: 350, height: 350, gravity: 'auto', quality: 100}], class: 'img-fluid ') %>
        <div class="d-flex flex-row-reverse"> 
          <div class="edit-delete-btn">
            <%=link_to 'Edit', root_path, class: 'btn btn-light btn-img-profile' %>
            <%=link_to 'Delete', root_path, class: 'btn btn-danger btn-img-profile mr-2' %>
          </div>
        </div>
      </div>
    <%end%>
  <%end%>
</div>
<br><br><br><br><br>

