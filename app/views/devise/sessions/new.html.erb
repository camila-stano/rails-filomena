<div class="container container-forms form-group">
  <h2 class = 'mb-3'>Login</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: false,
                  placeholder: 'Email',
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  placeholder: 'senha',
                  label: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean, label: 'Lembre de mim!' if devise_mapping.rememberable? %>
    </div>
    
    <div class="form-actions">
      <%= f.button :submit, "Login", class: 'btn btn-primary btn-main' %>
    </div>
    <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: 'forgot-password text-center' %><br />
    <hr>

  <% end %>
  <%= link_to "Crie sua conta!", new_registration_path(resource_name), class: 'btn btn-link' %><br />

</div>