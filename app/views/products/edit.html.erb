<%= render "shared/navbar" %>

<div class="container container-forms form-group">
  <h2 class = 'my-3'>Edite o seu produto!</h2>
  
  <%= simple_form_for(@product) do |f| %>
    <%= f.input :available, label: 'Mostrar a roupa no meu armário'%>
    <%= f.input :name, label: 'Nome do seu anúncio'%>
    <%= f.input :buyable, label:'A roupa está a venda?'%>
    <%= f.input :exchangeable, label:'Aceita troca nessa roupa?'%>
    <%= f.input :price, label:'Caso esteja à venda, qual o preço?'%>
    <%= f.input :category, label:'Qual o estilo da sua roupa?'%>
    <%= f.input :product_type, label:'Qual o tipo da sua roupa?'%>
    <%= f.input :size, label:'Qual o tamanho?'%>
    <%= f.input :description, label:'Descreva a sua roupa'%>

    <%= f.input :photos, as: :file, input_html: { multiple: true } %>

    <%= f.submit "Peça Atualizada!", class: "btn btn-success btn-create"%>
  <% end %>
    <%= link_to "Quero deletar do meu armário!", product_path,
                method: :delete, data: { confirm: 'Certeza que gostaria de deletar permanentemente essa peça?'},
                class: "btn btn-warning rounded btn-create mt-3" %>
</div>

<footer>
  <%= render "shared/footer" %>
</footer>