<%= render "shared/navbar" %>
<div class="container">

  <div class="row"> 

    <div class="banner-user", style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.1), rgba(128,128,128,0.1)), 
                                     url('')"> 

      <div class="col-9 text-center">
        <div class="banner-armario">
          <h1 class= 'profile-title'>Armário do <%= @product.user.first_name %> <%= @product.user.last_name %></h1>
          <p class='profile-description'><%= @product.user.rating.nil? ? "Novo usuário, seja o primeiro a negociar com ele!" : '⭐' * @product.user.rating %></p>

        </div>
      </div>
    
      <div class="col-3 d-flex justify-content-center">
        <div class="avatar-large">
          <% if @product.user.photo.present? %>
            <%= cl_image_tag @product.user.photo.key, class: "avatar-large" %>
          <% else %>
            <%= image_tag "https://icon-library.com/images/default-profile-icon/default-profile-icon-16.jpg", class: "avatar-large" %>
          <% end %>
        </div>  
      </div>

    </div> 
  </div>




<div id="carouselExampleControls" class="carousel slide   d-flex justify-content-center" data-ride="carousel">
  <div class="carousel-inner " style="width: 50%">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://i.pinimg.com/originals/62/8e/70/628e70b4b2bb4e1dc7d7828ab41957f9.jpg" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://i.pinimg.com/564x/86/02/db/8602db4270cc118a3da0495d1e374304.jpg" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://www.perfecta-montage.de/images/perfectamontagede/870-pin-de-mx-em-babessssss-roupas-tumblr-looks-tumblr-7573.jpg" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

