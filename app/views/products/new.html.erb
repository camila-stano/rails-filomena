<%= simple_form_for(@product) do |f| %>
  <%= f.input :name, label: 'Nome do seu anúncio'%>
  <%= f.input :buyable, label:'A roupa está a venda?'%>
  <%= f.input :exchangeable, label:'Aceita troca nessa roupa?'%>
  <%= f.input :price, label:'Caso esteja à venda, qual o preço?'%>
  <%= f.input :category, collection:Product::CATEGORIES, label:'Qual o estilo da sua roupa?'%>
  <%= f.input :product_type, collection:Product::PRODUCT_TYPE, label:'Qual o tipo da sua roupa?'%>
  <%= f.input :size, collection:Product::SIZE, label:'Qual o tamanho?'%>
  <%= f.input :description, label:'Descreva a sua roupa'%>

  <%= f.input :photo, as: :file %>

  <%= f.submit "Terminei!", class: 'btn btn-success'%>
<% end %>

<%= link_to "Voltar para a loja!", products_path, class: "btn btn-primary mt-3"%>
