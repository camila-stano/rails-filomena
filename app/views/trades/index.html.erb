<%= render "shared/navbar" %>

<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h2 class = 'title-filo'> Suas negociações </h2>
    </div>
  </div>

<% if current_user.trades.present? %>
  <div class="row">
    <div class="col-12">
      <% current_user.trades.each do |trade| %>
        <div class="card-trade">
          <p class="text-filo"> <strong> Negociando com <%= trade.product.user.first_name %></strong> | <%= link_to "ver perfil", profile_path(trade.product.user)%> </p>
          <p> Peça: <%= trade.product.name %></p>
          <p> Mensagem: <%= trade.content %></p>
          <button class="btn btn-primary btn-sm"> Arquivar negociação </button>          
        </div>
      <% end %>
    </div>
  </div>

  <%else%>
    <div class="dont-have-trades-title-btn mt-5">
      <div class="dont-have-trades">
        <h3>Você ainda não possui mensagens!!</h3>  
        <%= link_to 'Continue olhando as roupas', products_path, class: 'btn btn-primary' %>
      </div>
    </div>    
  <%end%>

</div>

  <%= render "shared/footer" %>
